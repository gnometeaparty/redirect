{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/bun/tsconfig.json",
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "bundler",
		"strictNullChecks": true,
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
